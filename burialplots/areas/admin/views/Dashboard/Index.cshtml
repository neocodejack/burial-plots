                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Orders </span>
                </div>
                <div class="tools"> </div>
            </div>
            <div class="portlet-body">

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <a class="dashboard-stat dashboard-stat-v2 blue" href="@Url.Action("Index", "Order")">
                            <div class="visual">
                                <i class="fa fa-comments"></i>
                            </div>
                            <div class="details">
                                <div class="number">
                                    <span data-counter="counterup" data-value="0">@ViewBag.neworder</span>
