
@{
    ViewBag.Title = "Item";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    
<script src="~/Areas/Admin/JS/Item/item.js"></script>
    }

<h2>Add An Item</h2>
<table class="table table-hover table-responsive">
    <tr>
        <td>Category</td>
        <td>
            <select class="form-control" id="cateid">


                @foreach (var item in ViewBag.list)
            {
                    <option value="@item.Id">@item.CateName</option>
            }
            </select>
        </td>
    </tr>
    <tr>
        <td>Item Number</td>
        <td><input type="text" class="form-control" id="itemno" placeholder="Item Number" /></td>
    </tr>
    <tr>
        <td>Item Name</td>
        <td><input type="text" class="form-control" id="itemname" placeholder="Item Name" /></td>
    </tr>
    <tr>
        <td>Item Qty</td>
        <td><input type="text" class="form-control" id="itemqty" placeholder="Item Quantity" /></td>
    </tr>
    <tr>
        <td>Cost Price</td>
        <td><input type="text" class="form-control" id="itemprice" placeholder="Item Price" /></td>
    </tr>
    <tr>
        <td>Retail Price</td>
        <td><input type="text" class="form-control" id="itemrprice" placeholder="Retail Price" /></td>
    </tr>
    <tr>
        <td>
            Featured Image
        </td>
        <td>
            <input type="file" accept="image/*" class="clear" onchange="showMyImage(this)" id="ImgUpload" />
        </td>


    </tr>
    <tr>
        <td>
            Featured 
        </td>
     
        <td>Yes<input type="radio" value="yes" name="feature" />No<input type="radio" value="no" name="feature" /></td>
       
    </tr>
    <tr>
        <td>
            Active
        </td>

        <td>Yes<input type="radio" value="yes" name="active" />No<input type="radio" value="no" name="active" /></td>

    </tr>
    <tr>
        <td>
            Item Description
        </td>
        <td>
            <textarea id="itemdescription" class="form-control"></textarea>
        </td>
    </tr>
    <tr>
        <td>
            Image Preview
        </td>
        <td>
            <img id="thumbnil" class="img-thumbnail clear form-control" style="width:220px; height:220px; margin-top:10px;" src="" alt="Dimesnsions (220 X 220) pixels" />
<pre style="width:220px;">220 X 220 Pixels</pre>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="button" onclick="additem()" class="btn btn-success pull-right" value="Add Item" />
        </td>
    </tr>
</table>
<input type="hidden" id="Imghiden" value="@Url.Action("Upload","Page")" />