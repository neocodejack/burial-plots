
@{
    ViewBag.Title = "Add System User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{


<script src="~/Areas/Admin/JS/Admin/systemuser.js"></script>
   


}
<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("ViewSystemUser", "Admin",new {type="SuperAdmin" })" class="btn btn-primary"><i class="fa fa-arrow-left"></i>Back </a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <h2>Add System User</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-hover">
         
            <tr>
                <td>
     User Name
                </td>
                <td>
                    <input type="text" id="username" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input type="password" id="pass" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>
                    Select Role Type
                </td>
                <td>
                    <select class="form-control" id="rooltype">
                        <option value="SuperAdmin">Super Admin</option>
                        <option value="Admin">Cemetery Manager</option>
                        

                    </select>
                </td>
            </tr>




        </table>

    </div>

</div>
<div class="row">
    <div class="col-md-10">

    </div>
    <div class="col-md-2">
        <input type="button" value="Submit" onclick="addnewsystme()" class="form-control btn-primary pull-right" />
    </div>
</div>