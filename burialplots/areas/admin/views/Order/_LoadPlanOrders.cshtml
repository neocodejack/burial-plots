@model IEnumerable<BurialPlots.DAL.OrderPlan>
@using BurialPlots.Models
@{
    var enc = new DataEncryptor();
}
<table class="table table-bordered table-hover table-responsive table-striped" id="tblPlanLoadOrders">
    <thead>
        <tr>
            <th>
                Cart ID
            </th>
            <th>
                Name
            </th>
            <th>
                Business Name
            </th>
            <th>
                Date
            </th>
            <th>
                Total Price
            </th>
            <th>
                Status
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CartId
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.SeviceListing.BusinessName
                </td>
                <td>
                    @item.OrderDate.Value.ToString("dd-MMM-yyyy hh:mm tt")
                </td>
                <td>
                    @Math.Round(Convert.ToDecimal(item.OrderPlanItems.Sum(c => c.Price)), 2)
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <span class="fa fa-edit" style="color:green; cursor:pointer" onclick="editPlanOrder('@item.Id')" title="Edit the order"></span>
                    <span class="fa fa-trash-o" style="color:red; cursor:pointer" title="Delete the order" onclick="deletePlanOrder('@item.Id')"></span>
                </td>
            </tr>
                        }
    </tbody>
</table>

