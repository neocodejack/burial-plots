@model BurialPlots.DAL.Page
@{
    ViewBag.Title = "Edit Page";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.quilljs.com/1.2.3/quill.snow.css" rel="stylesheet">
@section Scripts{
    <script src="~/Areas/Admin/JS/EditDeletePage.js"></script>
    <script src="https://cdn.quilljs.com/1.2.3/quill.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <h2>Edit Page</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <label>Page URL</label>
        @if (ViewBag.pageurl != null)
        {
            <input type="text" readonly="readonly" id="pageurl" value="@ViewBag.pageurl" class="form-control" />
        }
        else
        {
            <input type="text" readonly="readonly" id="pageurl" class="form-control" />
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <label>Change HTML Code <input id="chk" onclick="showsource()" type="checkbox" /></label>
    </div>
</div>
<div class="row" id="souruce" style="display:none">
    <div class="col-md-12">
        <textarea placeholder="Source Code here..." class="form-control" id="show"></textarea>
        <br />
        <input type="button" class="btn btn-primary" value="Add this change to page" onclick="appendCodeonTextEditor()" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#divEnglish">English</a></li>
            <li><a data-toggle="tab" href="#divUrdu">Urdu</a></li>
            <li><a data-toggle="tab" href="#divArabic">Arabic</a></li>
            <li><a data-toggle="tab" href="#divChinese">Chinese</a></li>
            <li><a data-toggle="tab" href="#divItalian">Italian</a></li>
            <li><a data-toggle="tab" href="#divHindi">Hindi</a></li>
            <li><a data-toggle="tab" href="#divTurkish">Turkish</a></li>
            <li><a data-toggle="tab" href="#divBengali">Bengali</a></li>
            <li><a data-toggle="tab" href="#divHebrew">Hebrew</a></li>
        </ul>
        <div class="tab-content">
            <div id="divEnglish" class="tab-pane fade in active">
                <div class="row">
                    <div class="col-md-12">
                        <label>Page Title</label>
                        @if (ViewBag.title != null)
                        {
                            <input type="text" id="txttittle" value="@ViewBag.tittle" placeholder="Enter Tittle Of Page" class="form-control" />
                        }
                        else
                        {
                            <input type="text" id="txttittle" placeholder="Enter Tittle Of Page" class="form-control" />
                        }
                    </div>
                </div>
                <br />
                <div id="editornew" style="height:400px;">
                    @Html.Raw(ViewBag.body)
                </div>
            </div>
            <div id="divUrdu" class="tab-pane fade">
                <div class="row">
                    <div class="col-md-12">
                        <label>Page Title</label>
