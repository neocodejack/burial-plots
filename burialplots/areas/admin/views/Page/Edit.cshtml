<br />
<div class="row">
    <div class="col-md-12">
        <label>Featured Image</label>
        <input type="file" accept="image/*" class="clear" onchange="showMyImage(this)" id="ImgUpload" style="margin-top:20px;" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <label>Select Service Box (Ctrl + Click)</label>
        <select id="multivalue" class="form-control" multiple>
            <option value="">--None--</option>
            @foreach (var item in ViewBag.box)
            {
                if (Model.PageBoxes.FirstOrDefault(c => c.Box == item.Id) != null)
                {
                    <option selected="selected" value="@item.Id">@item.BoxName</option>
                }
                else
                {
                    <option value="@item.Id">@item.BoxName</option>
                }
            }
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <label>
            Preview Image
        </label>
        <img id="thumbnil" class="img-thumbnail" style="width:220px; height:220px; margin-top:10px;" src="~/Areas/Admin/Image/@ViewBag.image" />
        <pre style="width:220px;">220 X 220 Pixels</pre>
        <input type="file" accept="image/*" class="clear" onchange="showMyImage(this)" id="ImgUpload" style="margin-top:20px;" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 text-center">
        <input type="button" class="btn btn-default" value="Submit" onclick="GetDataRich('@ViewBag.Id')" />
    </div>
</div>
<input type="hidden" id="Imghiden" value="@Url.Action(" Upload","Page")" />

