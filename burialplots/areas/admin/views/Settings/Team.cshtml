
@{
    ViewBag.Title = "Team";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/Areas/Admin/JS/Setting/team.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <h2>Team</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-md-6">
                <label>Name</label>
                <input type="hidden" id="hidId" />
                <input type="text" class="form-control" id="txtName" />
            </div>
            <div class="col-md-6">
                <label>Designation</label>
                <input type="text" class="form-control" id="txtPost" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <label>Description</label>
                <textarea type="text" class="form-control" id="txtDescription" ></textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label>Select Image</label>
                <input type="file" id="ImgUpload" onchange="showMyImage(this)" class="btn btn-warning" style="width:100%" />
            </div>
            <div class="col-md-6">
                <br />
                <img src="" alt="" id="thumbnil" style="width:200px;height:200px" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12 text-center">
                <input type="button" class="btn btn-success" onclick="saveTeam()" value="Save" />
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12" id="divLoadTeam"></div>
</div>