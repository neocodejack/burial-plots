@model IEnumerable<BurialPlots.DAL.Country>

<table class="table table-responsive table-hover table-bordered table-striped" id="tblLoadCountries">
    <thead>
        <tr>
            <th class="hide"></th>
            <th>
                Country Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="hide">@item.Id</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Description != null)
                    {
                        <span>@item.Description</span>
                    }
                </td>
                <td>
                    <span class="fa fa-edit" style="color: green; cursor: pointer" onclick="editCountry('@item.Id', '@item.Name', '@item.Description')"></span>&nbsp;
                    <span class="fa fa-trash-o" style="color: red; cursor: pointer" onclick="deleteCountry('@item.Id')"></span>
                </td>
            </tr>
        }
    </tbody>
</table>
