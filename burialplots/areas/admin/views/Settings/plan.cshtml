
@{
    ViewBag.Title = "Plan";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    <script src="~/Areas/Admin/JS/Setting/planSetting.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <h2>Add Plan</h2>
    </div>
</div>
<br />
<form>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Position:</label>
            </div>
            <div class="col-md-7">
                <select id="txtPosition" class="form-control">
                    <option value="1">Position one</option>
                    <option value="2">Position two</option>
                    <option value="3">Position three</option>
                    <option value="">General</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Title:</label>
            </div>
            <div class="col-md-7">
                <input type="text" id="txtTitle" class="form-control" placeholder="Enter Title" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Price:</label>
            </div>
            <div class="col-md-7">
                <input type="number" onkeypress="return IsNumeric(event)" min="0" id="txtPrice" class="form-control" placeholder="Enter Price" />
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Description:</label>
            </div>
            <div class="col-md-7">
                <textarea id="Description" rows="5" class="form-control" placeholder="Enter Plan Description"></textarea>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group">
            <div class="col-md-7 col-md-offset-3">
                <div class="row">
                    <div class="col-md-6">
                        <label>Plan Period(Months)</label>
                        <select class="form-control" id="drpPlanPeriod">
                            @for (int i = 0; i <= 12; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label>Free Listing Period(Months)</label>
                        <select class="form-control" id="drpFreePeriod">
                            @for (int i = 0; i <= 12; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="row text-center">
                <input type="button" value="Save" onclick="SavePlan()" class="btn btn-primary" />
                <input type="button" value="Reset" onclick="resetAllFields()" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-md-12" id="divLoadPlanList">

    </div>
</div>
<input type="hidden" id="hidLoadPlanLnk" value="@Url.Action("LoadPlanList", "Settings")" />
<input type="hidden" id="hidSavePlanLnk" value="@Url.Action("SavePlan", "Settings")" />
<input type="hidden" id="hidDeletePlanUrl" value="@Url.Action("DeletePlan", "Settings")" />
<input type="hidden" id="hidId" />

