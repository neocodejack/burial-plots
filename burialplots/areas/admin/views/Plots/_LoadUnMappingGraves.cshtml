@model IEnumerable<BurialPlots.DAL.Grave>

<table class="table table-bordered table-hover table-responsive table-striped" id="tblLoadMappingGraves">
    <thead>
        <tr>
            <th>
                Plot No
            </th>
            <th>
                Plot Name
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>Internements</th>
            <th>Tiers</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlotNo)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @item.CemeteryLayers.Count()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tier.Name)
            </td>

            <td>
                <span class="fa fa-trash-o" style="color:red; cursor:pointer" onclick="deleteGrave('@item.Id')"></span> | 
                @if (string.IsNullOrEmpty(item.SpotId))
                {
                    <a href="@Url.Action("EditMappingSection", "EditCemetery", new { id= item.Id })">Map Now</a>
                }
                else
                {
                    <span class="fa fa-map-marker"></span>
                }
            </td>
        </tr>
       }
    </tbody>
</table>
