@model IEnumerable<BurialPlots.DAL.PaymentMethod>

<table class="table table-bordered table-hover table-responsive table-striped" id="tblLoadPaymentMethods">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Installation ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstallationId)
                </td>
                <td>
                    @if (item.Active != true)
                    {
                        <span>Not Active</span>
                    }
                    else
                    {
                        <span>Active</span>
                    }
                </td>
                <td>
                    <span class="fa fa-edit" style="cursor:pointer" onclick="editPaymentMethods('@item.Id', '@item.Name', '@item.InstallationId', '@item.Active.ToString().ToLower()')"></span>
                    <span class="fa fa-trash-o" onclick="deletePaymentMethod('@item.Id')" style="cursor:pointer; color:red"></span>
                </td>
            </tr>
        }
    </tbody>
</table>
