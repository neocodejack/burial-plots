
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
<script src="~/Areas/Admin/JS/paymentMethods/index.js"></script>
    }

<div class="row">
    <div class="col-md-12">
        <h2>Payment Methods</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-md-6">
                <label>Name</label>
                <input type="text" class="form-control" id="txtName" />
            </div>
            <div class="col-md-6">
                <label>Installation ID</label>
                <input type="text" class="form-control" id="txtInstId" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label>Active <input type="checkbox" id="chkActive" /></label>
            </div>
            <div class="col-md-6">
                <input type="button" value="Save" onclick="savePaymentMethod()" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12" id="divLoadPaymentMethods"></div>
</div>
<input type="hidden" id="hidId" />