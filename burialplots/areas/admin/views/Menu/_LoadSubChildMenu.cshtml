
@model IEnumerable<BurialPlots.DAL.SubChlidMenu>


<table id="tblload" class="table table-bordered table-hover table-responsive table-striped table-condensed">
    <thead>
        <tr>
            <th>
                Sub Menu
            </th>
            <th>
                Page Url
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PageTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PageUrl)
                </td>
                <td>
                    <a><i class="fa fa-trash-o" aria-hidden="true" data-toggle="tooltip" title="Click here to delete menu" id="Delete" onclick="Delete(@item.Id)"></i></a>
                    <a><i class="fa fa-pencil-square-o" aria-hidden="true" title="Click here to edit" id="edit" onclick="edit('@item.Id','@item.submenu','@item.MenuId','@item.PageTitle','@item.PageUrl')"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
