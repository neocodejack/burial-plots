@using BurialPlots.DAL
@{
    ViewBag.Title = "View Menus";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{
<script src="~/Areas/Admin/JS/Menu/EditDeleteMenu.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <h2>Menus</h2>
    </div>
</div>
<br />
<div class="row" style="display:none" id="divEditMenu">
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
            <div class="col-md-3">
                <label>Menu Name:</label>
            </div>
            <div class="col-md-9">
                <input type="hidden" id="hidid" />
                <input id="category" placeholder="Enter Menu Name" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                <label>Select Page:</label>
            </div>
            <div class="col-md-9">
                <select id="txt_menu" class="form-control">
                    @foreach (var item in ViewBag.pageurl)
                    {
                        <option value="@item.Pageurl">@item.PageTittle</option>
                    }
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-9 col-md-offset-3 text-center">
                <input type="button" id="menuedit" value="Menu Edit" onclick="EditMenu()" class="btn btn-success" />
                <input type="button" value="Close" onclick="closeEditDiv()" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12" id="Menu"></div>
</div>
<input type="hidden" id="LoadMenu" value="@Url.Action("LoadMenu","Menu")" />
<input type="hidden" id="EditMenu" value="@Url.Action("Edit","Menu")" />
<input type="hidden" id="HiddenDelete" value="@Url.Action("DeleteMenu","Menu")" />
<input type="hidden" id="hidenedit" value="@Url.Action("EditMenu","Menu")" />