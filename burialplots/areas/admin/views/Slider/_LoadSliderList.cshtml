@model IEnumerable<BurialPlots.DAL.Slide>
<style>
    p {
        width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<br />
<table class="table table-bordered table-hover table-responsive table-striped" id="tblLoadSliderList">
    <thead>
        <tr>
            @*<th>
                Name
            </th>*@
            <th>
                Caption
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                @*<td>
                    @item.Name
                </td>*@
                <td>
                    @item.Caption

                </td>
                <td class="text-center">
                    <span class="fa fa-edit" onclick="editCaption('@item.Id')" style="cursor:pointer"></span>
                    <span class="fa fa-trash-o" onclick="deleteCaption('@item.Id')" style="cursor:pointer; color:red"></span>
                </td>
            </tr>
        }
    </tbody>
</table>
