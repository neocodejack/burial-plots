                else
                {
                    <input type="text" class="form-control" id="txtName" />
                }
            </div>
        </div>
        <br />*@
        <div class="row">
            <div class="col-md-12">
                <label>Slider Image</label>
                @if (!string.IsNullOrEmpty(Model.SlideImages))
                {
                    <img id="thumbnil" src="~/images/Slider/@Model.SlideImages" class="img-responsive" />
