@model BurialPlots.DAL.Slider
@{
    ViewBag.Title = "Sliders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Areas/Admin/JS/Setting/SliderList.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <h2>Slider</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
