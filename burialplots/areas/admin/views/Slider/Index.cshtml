            <div class="col-md-12 text-center">
                <input type="button" class="btn btn-success" onclick="saveSlider()" value="Save/Update" />
            </div>
        </div>
    </div>
</div>
<br />
<hr style="height:3px; background-color:cadetblue" />
<br />
<div class="row">
    <div class="col-md-12">
        <h2>Captions</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <input type="hidden" id="hidId" />
        <label>Caption English</label>
        <textarea id="txtEnglish" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <label>Caption Urdu</label>
        <textarea id="txtUrdu" class="form-control"></textarea>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <label>Caption Arabic</label>
        <textarea id="txtArabic" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <label>Caption Hindi</label>
        <textarea id="txtHindi" class="form-control"></textarea>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <label>Caption Chinese</label>
        <textarea id="txtChinese" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <label>Caption Italian</label>
        <textarea id="txtItalian" class="form-control"></textarea>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <label>Caption Turkish</label>
        <textarea id="txtTurkish" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <label>Caption Bengali</label>
        <textarea id="txtBengali" class="form-control"></textarea>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <label>Caption Hebrew</label>
        <textarea id="txtHebrew" class="form-control"></textarea>
    </div>
    <div class="col-md-6">
        <br /><br />
        <input type="button" onclick="saveCaption()" class="btn btn-success" value="Save Caption" />
        <input type="button" onclick="clearAllFields()" class="btn btn-default" value="Reset" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12" id="divLoadSliderList">
    </div>
</div>
<input type="hidden" id="hidDeleteSliderUrl" value="@Url.Action("DeleteSlider", "Settings")" />
<input type="hidden" id="hidLoadSliderListUrl" value="@Url.Action("LoadSliderList", "Slider")" />
<input type="hidden" id="hidBlogListingDeleteLnk" value="@Url.Action("DeleteBlog", "Blog")" />
<input type="hidden" id="hidPublishBloglnk" value="@Url.Action("PublishBlogApproval", "Blog")" />
