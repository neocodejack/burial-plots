@model BurialPlots.Models.ServiceListingModel

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Plan Name</th>
            <th>County</th>
            <th>Business</th>
            <th>Plan Price</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody class="table-bordered">
        @foreach (var item in Model.BusinessPlan)
        {
            <tr>

                <td>
                    <div class="col-md-3 text-center">
                        <span>@item.PlanName</span>
                    </div>
                </td>
                <td>
                    <div class="col-md-3 text-center">
                        <span>@item.CountyName</span>
                    </div>
                </td>
                <td>
                    <div class="text-center">
                        @item.BusinessName
                    </div>
                </td>
                <td class="text-center">
                    @item.PlanPrice
                </td>
                <td>
                    <div class="col-md-1">
                        <span class="fa fa-trash-o" style="color:red; cursor:pointer" onclick="removeFromCart('@item.county', '@item.business', '@item.plan')"></span>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-2 col-md-offset-7 text-center">
        <label>Grand Total:</label>
    </div>
    <div class="col-md-2 text-center">
        <span id="cartCount">£@Model.BusinessPlan.Sum(c=>Convert.ToDecimal(c.PlanPrice))</span>
    </div>
</div>
