@model IQueryable<BurialPlots.DAL.Cemetery>


@{
    ViewBag.Title = "Cemetery Plots";
    Layout = "~/Views/Shared/_Header.cshtml";
}
@section Scripts{
    <script src="~/js/Market/cemteryPlots.js"></script>
}
<div class="site-info padding-by-header margin-top-20" style="margin-top:50px">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (ViewBag.LocationName != null)
                {
                    <h3>@ViewBag.LocationName</h3>
                }
            </div>
        </div>
        <div class="row margin-top-20">
            <input type="hidden" id="hidCemeteriesCount" value="@Model.Count()" />
            <div>
                @if (Model.Count() > 0)
                {
                    
                        <div class="container">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-3 margin-top-20">
                                        <div class="thumbnail" style="padding-bottom:16px;">
                                            <div class="row" style="height:180px">
                                                <div class="col-md-12">
                                                    <a href="@Url.Action("CemeteryDetails", "Market" , new { id=item.Id, Area="" })">
                                                        <img src="~/images/CemeteryPlots/@item.Image" class="img-responsive" />
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 text-center">
                                                    <a style="color:rgb(110,122,146)" href="@Url.Action("CemeteryDetails", "Market" , new { id=item.Id, Area="" })">
                                                        @item.Name
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    
                }
                else
                {
                    <div class="col-md-12 text-center">
                        <span>No match found</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
