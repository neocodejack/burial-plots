@model IEnumerable<BurialPlots.DAL.Cemetery>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="col-md-3 margin-top-20">
            <div class="thumbnail" style="padding-bottom:16px;">
                <div class="row" style="height:180px">
                    <div class="col-md-12">
                        <a href="@Url.Action("CemeteryDetails", "Market" , new { id=item.Id, Area="" })">
                            <img src="~/images/CemeteryPlots/@item.Image" class="img-responsive" />
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a style="color:rgb(110,122,146)" href="@Url.Action("CemeteryDetails", "Market" , new { id=item.Id, Area="" })">
                            @item.Name
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-md-12 text-center">
        <span>No match found</span>
    </div>
}
