@using BurialPlots.Controllers
@model IEnumerable<BurialPlots.Controllers.Shoppingcart>
@{
    ViewBag.Title = "Chekout";
    Layout = "~/Views/Shared/_Header.cshtml";
}
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="profile" href="http://gmpg.org/xfn/11">
    <title>Burial Plots</title>
    @*<link href="~/style.css" rel="stylesheet" type="text/css" media="all" />*@

    <script src="~/js/Cart/cart.js"></script>
    <script src="~/js/megamenu.js"></script>
    <script src="~/js/jquery.js"></script>

    @*<link rel="stylesheet" href="style.css" type="text/css" media="all">*@
    @*<script type="text/javascript" src="js/jquery.js"></script>*@
    <script src="~/js/jquery.js"></script>

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700" rel="stylesheet">

    <!-- fixed header -->
    <script>
        jQuery(window).scroll(function () {
            if (jQuery(this).scrollTop() > 1) {
                jQuery('.header-menu').addClass("sticky");
            }
            else {
                jQuery('.header-menu').removeClass("sticky");
            }

        });
    </script>
    <!-- Owl Carousel Assets -->
    <link href="~/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/css/owl.carousel.min.css" rel="stylesheet" />

    <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />




</head>

<div class="site-info" style="padding-top:200px; padding-bottom:200px; background-color:white ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h5><span class="fa fa-shopping-cart"></span> Shopping Cart</h5>
                                </div>
                                <div class="col-xs-6 ">
                                    <a class="pull-right"  href="@Url.Action("Index","Product")">
                                        <span class="fa fa-share"></span> Continue shopping
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        @foreach (var item in Model)
                        {
                            <div class="row">
                                <div class="col-xs-2">

                                    <img class="img-responsive" src="~/Areas/Admin/Image/@item.itempic">
                                </div>
                                <div class="col-xs-4">
                                    <h4 class="product-name"><strong>@item.itemname</strong></h4><h4><small>@item.itemdescription</small></h4>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-6 text-right">
                                        <h6><strong>@item.itemprice<span class="text-muted">x @item.itemqty</span></strong></h6>
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="number" style="background-color:gainsboro;color:black" class="form-control input-sm" value="@item.itemqty">
                                    </div>

                                    <div class="col-xs-2">
                                        <a><i class="fa fa-trash-o" aria-hidden="true" data-toggle="tooltip" title="Click here to Delete Item" id="Delete" onclick="Deletetocart(@item.itemid)"></i></a>
                                        <a href="@Url.Action("Edit","Page",new { id=item.itemid})"><i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="tooltip modal" title="Click here To Edit" id="edit"></i></a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            @*<div class="row">
                                    <div class="text-center">
                                        <div class="col-xs-9">
                                            <h6 class="text-right">Added items?</h6>
                                        </div>
                                        <div class="col-xs-3">
                                            <button type="button" class="btn btn-default fa fa-edit">
                                            </button>
                                        </div>
                                    </div>
                                </div>*@

                        }
                    </div>

                    <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-xs-9">
                                <h4 class="text-right">Total <strong>$50.00</strong></h4>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" onclick="Checkout()" class="btn btn-success btn-block">
                                    Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
